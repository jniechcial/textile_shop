<% unless @product_properties.empty? %>
  <h3 class="product-section-title product-view--properties-title"><%= Spree.t('properties')%></h3>
  <table id="product-properties" class="table" data-hook>
    <tbody>
      <% @product_properties.each do |product_property| %>
        <tr class="product-view--property-row">
          <td><%= product_property.property.presentation %></td>
          <td><%= product_property.value %></td>
        </tr>
      <% end %>
      <% reset_cycle('properties') %>
    </tbody>
  </table>
<% end %>
