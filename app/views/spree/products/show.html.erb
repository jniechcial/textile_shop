<% @body_id = 'product-details' %>

<% cache cache_key_for_product do %>
  <div class="container product-view">
    <%= spree_breadcrumbs(@taxon) %>
    <div class="row" itemscope itemtype="https://schema.org/Product">
      <div class="col-md-7 col-sm-7" data-hook="product_left_part">
        <div data-hook="product_left_part_wrap">
          <h1 class="product-view--title hidden-on-desktop" itemprop="name"><%= @product.name %></h1>
          <div id="product-images" data-hook="product_images">
            <div id="main-image" class="panel panel-default product-view--main-image" data-hook>
              <div class="panel-body text-center">
                <%= product_image(@product, itemprop: "image") %>
              </div>
            </div>
            <div id="thumbnails" data-hook>
              <%= render partial: 'thumbnails' %>
            </div>
          </div>

          <div class="product-view--description">
            <%= product_description(@product) %>
          </div>
        </div>
      </div>

      <div class="col-md-5 col-sm-5" data-hook="product_right_part">
        <div data-hook="product_right_part_wrap">
          <div id="product-description" data-hook="product_description">
            <h1 class="product-view--title hidden-on-mobile" itemprop="name"><%= @product.name %></h1>

            <div id="cart-form" data-hook="cart_form">
              <%= render partial: 'cart_form' %>
            </div>
          </div>

          <div data-hook="product_properties">
            <%= render partial: 'properties' %>
          </div>

          <div data-hook="promotions">
            <%= render partial: 'promotions' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
