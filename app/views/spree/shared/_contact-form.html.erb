<%= form_for @contact, url: root_path, remote: true do |f| %>
  <div class="form-inline">
    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field  :name, required: true, placeholder: 'Imię', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.text_field :email, required: true, placeholder: 'Email', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :message, class: 'sr-only' %>
    <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control",
                      placeholder: "O co chcesz nas zapytać?"%>
  </div>

  <div class= "hidden">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
  </div>

  <%= f.submit 'Wyślij', class: 'btn btn-primary btn-full' %>
<% end %>
